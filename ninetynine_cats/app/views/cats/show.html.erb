<a href="<%= cats_url %>">Back to cats</a>

<h1><%= @cat.name %></h1>

<table>
  <thead>
    <tr>
      <th colspan="2">CHARACTERISTICS</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Age</td>
      <td><%= @cat.age %></td>
    </tr>
    <tr>
      <td>Sex</td>
      <td><%= @cat.sex %></td>
    </tr>
    <tr>
      <td>Color</td>
      <td><%= @cat.color %></td>
    </tr>
    <tr>
      <td>Description</td>
      <td><%= @cat.description %></td>
    </tr>
  </tbody>
</table>

<br>

<a href="<%= edit_cat_url(@cat) %>">Edit</a>

<br>

<table>
  <thead>
    <tr>
      <th colspan="2">RENTAL REQUESTS</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td>Start date</td>
      <td>End date</td>
      <td>Status</td>
      <td>Action</td>
    </tr>
    <% @rental_requests.each do |request| %>
      <tr>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td><%= request.status %></td>
        <% if request.pending? %>
          <td>
            <form action="<%= approve_cat_rental_request_url(request.id) %>" method="POST">
              <input type="submit" value="Approve">
            </form>

            <form action="<%= deny_cat_rental_request_url(request.id) %>" method="POST">
              <input type="submit" value="Deny">
            </form>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<a href="<%= new_cat_cat_rental_request_url(@cat) %>">Rent <%= @cat.name %></a>